<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".MainActivity">

        <Button
            android:id="@+id/button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="testPrinciple"
            android:text="点我测试面向对象六大基本原则"
            android:textSize="25sp" />

        <Button
            android:id="@+id/button1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="testBuilderPatterm"
            android:text="点我测试建造者模式"
            android:textSize="25sp" />

        <Button
            android:id="@+id/button2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="testChainPatterm"
            android:text="点我测试责任链模式"
            android:textSize="25sp" />

        <Button
            android:id="@+id/button3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="testDecoratorPatterm"
            android:text="点我测试装饰者模式"
            android:textSize="25sp" />

        <Button
            android:id="@+id/button4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="testFactoryPatterm"

            android:text="点我测试简单工厂模式"
            android:textSize="25sp" />

        <Button
            android:id="@+id/button6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="testObserverPatterm"
            android:text="点我测试观察者模式"

            android:textSize="25sp" />

        <Button
            android:id="@+id/button11"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="testSingletomPatterm"
            android:text="点我测试单例模式"
            android:textSize="25sp" />

        <Button
            android:id="@+id/button7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="testStrategyPatterm"
            android:text="点我测试策略模式"
            android:textSize="25sp" />

        <Button
            android:id="@+id/button8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="testAdapterPatterm"
            android:text="点我测试适配器模式"
            android:textSize="25sp" />

        <Button
            android:id="@+id/button5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="testFactoryPatterm"
            android:text="点我测试抽象工厂模式"
            android:textSize="25sp" />

        <Button
            android:id="@+id/button9"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="testTemplatePatterm"
            android:text="点我测试模板方法模式"
            android:textSize="25sp" />

        <Button
            android:id="@+id/button10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="testProxyPatterm"
            android:text="点我测试代理模式"
            android:textSize="25sp" />

        <Button
            android:id="@+id/button101"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="testPrototypePatterm"
            android:text="点我测试原型模式"
            android:textSize="25sp" />

        <Button
            android:id="@+id/button1012"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="testIteratorPatterm"
            android:text="点我测试迭代器模式"
            android:textSize="25sp" />
    </LinearLayout>
</ScrollView>