<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/dialog_message_two_button_width"
    android:layout_height="@dimen/dialog_message_two_button_height"
    android:background="@drawable/shape_corner_background"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100px"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:maxLines="1"
            android:textColor="@android:color/black"
            android:textSize="@dimen/dialog_18_size" />

        <TextView
            android:id="@+id/message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dialog_message_two_top"
            android:maxLines="2"
            android:textColor="@android:color/black"
            android:textSize="@dimen/dialog_25_size" />
    </LinearLayout>

    <ProgressBar
        android:layout_marginTop="20px"
        android:indeterminateDrawable="@drawable/progress_large"
        android:indeterminateDuration="1000"
        android:id="@+id/progress"
        android:layout_width="70px"
        android:layout_height="70px" />
</LinearLayout>